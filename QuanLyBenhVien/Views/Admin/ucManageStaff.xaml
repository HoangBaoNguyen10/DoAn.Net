<UserControl x:Class="QuanLyBenhVien.Views.Admin.ucManageStaff"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="QUẢN LÝ NHÂN SỰ" FontSize="24" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,20"/>

        <DataGrid Grid.Row="1" x:Name="dgStaff" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã NV" Binding="{Binding MaNV}" Width="80"/>
                <DataGridTextColumn Header="Họ Tên" Binding="{Binding HoTen}" Width="*"/>
                <DataGridTextColumn Header="Chức Vụ" Binding="{Binding TenCV}" Width="150"/>
                <DataGridTextColumn Header="Khoa" Binding="{Binding TenKhoa}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Thêm Mới" Width="100" Height="35" Background="#27ae60" Foreground="White" Margin="5" BorderThickness="0"/>
            <Button Content="Sửa" Width="100" Height="35" Background="#f1c40f" Foreground="White" Margin="5" BorderThickness="0"/>
            <Button Content="Xóa" Width="100" Height="35" Background="#e74c3c" Foreground="White" Margin="5" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</UserControl>