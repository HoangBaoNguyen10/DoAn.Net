<Window x:Class="QuanLyBenhVien.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyBenhVien"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="DANH SÁCH BỆNH NHÂN" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Button Content="Tải danh sách" Width="120" Height="30" Click="LoadData_Click" Margin="0,0,0,10"/>

            <DataGrid x:Name="dgBenhNhan" Height="300" AutoGenerateColumns="True" Background="White" BorderBrush="Gray" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>
